<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Yumecos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/pinkPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/pinkLatarMuda</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_yumecos</item>
        <item name="postSplashScreenTheme">@style/Theme.Yumecos</item>
    </style>
</resources>