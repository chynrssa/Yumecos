<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_sangat_muda">

    <ImageView
        android:id="@+id/imageView_bubble"
        android:layout_width="483dp"
        android:layout_height="409dp"
        android:adjustViewBounds="true"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bubble_chat"
        app:layout_constraintBottom_toTopOf="@+id/button_belanja"
        app:layout_constraintDimensionRatio="H,1:0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.90"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView_kosong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:fontFamily="@font/pixelify_sans_semibold"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_bubble"
        app:layout_constraintEnd_toEndOf="@+id/imageView_bubble"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView_bubble"
        app:layout_constraintTop_toTopOf="@+id/imageView_bubble"
        app:layout_constraintVertical_bias="0.422"
        android:text="@string/cart_empty_title" />

    <ImageView
        android:id="@+id/imageView_cart"
        android:layout_width="358dp"
        android:layout_height="390dp"
        android:adjustViewBounds="true"
        android:elevation="1.5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1.1"
        app:layout_constraintEnd_toEndOf="@+id/imageView_bubble"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/imageView_bubble"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595"
        app:layout_constraintWidth_percent="0.5"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_belanja"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/custom_button"
        android:elevation="10dp"
        android:fontFamily="@font/pixelify_sans_semibold"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="40dp"
        android:paddingBottom="12dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.6"
        android:text="@string/cart_empty_button_text" />

    <ImageView
        android:id="@+id/imageView_gun"
        android:layout_width="90dp"
        android:layout_height="103dp"
        android:adjustViewBounds="true"
        android:elevation="3dp"
        android:src="@drawable/gun"
        app:layout_constraintBottom_toBottomOf="@+id/button_belanja"
        app:layout_constraintDimensionRatio="H,1:0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_belanja"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.15"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>